@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer;
@model AuthorViewModel
@{
    ViewData["Title"] = Localizer["Title"];
}

<h2>@Localizer["Title"]</h2>
<hr />

<form asp-controller="Author" asp-action="Add">
    <div class="form-group">
        <label for="first-name">@Localizer["FirstName"]</label>
        <input type="text" class="form-control" id="first-name" name="FirstName" required />
    </div>
    <div class="form-group">
        <label for="last-name">@Localizer["LastName"]</label>
        <input type="text" class="form-control" id="last-name" name="LastName" required />
    </div>
    <button type="submit" class="btn btn-success mt-4">@Localizer["Add"]</button>
</form>

@if((bool)ViewData["failInformation"])
{
    <p class="text-danger mt-1 invisible" id="fail-info">Adding new author failed. Check if all fields are filled.</p>
}